@model BasicCrud.ViewModels.ListsIndex

@{
    ViewBag.Title = "Lists";
}

<div class="row">
    <div class="container">
        @Html.Partial("Alert")
        <h2 class="pull-left">@ViewBag.Title</h2>
    </div>
</div>
<hr/>
<div class="panel panel-primary">
    <div class="panel-heading" style="height: 65px">
        <p class="table-padding">Lists</p>
    </div>
    <table class="table table-striped table-hover">
        <tbody>
            @if (Model.Exist)
            {
                foreach (var list in Model.Lists)
                {
                    <tr id="@list.Id">
                        <td><a href="@Url.Action("Details", new {id = list.Id})" class="table-link">@list.Name</a></td>
                        <td class="text-right">
                            <a href="@Url.Action("Index", "Tasks", new {id = list.Id}, null)" class="btn btn-success">
                                <i class="fa fa-pencil-square-o icon"></i> 
                                View Tasks
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        <p class="table-link">You currently have no lists. <a href="@Url.Action("Create")">Click here to create one!</a></p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<hr />

<div class="pull-left">
    @if (Model.Lists.HasPreviousPage)
    {
        <a href="@Url.Action("Index", new {Page = Model.Lists.PreviousPage})" class="btn btn-primary">
            <i class="fa fa-arrow-left icon"></i> Previous Page
        </a>
    }
    else
    {
        <a href="" onclick="return false" class="btn btn-primary disabled">
            <i class="fa fa-arrow-left icon"></i> Previous Page
        </a>
    }
</div>

<div class="pull-right">
    @if (Model.Lists.HasNextPage)
    {
        <a href="@Url.Action("Index", new {Page = Model.Lists.NextPage})" class="btn btn-primary">
            Next Page <i class="fa fa-arrow-right" style="padding-left: 6px"></i>
        </a>
    }
    else
    {
        <a href="" onclick="return false" class="btn btn-primary disabled">
            Next Page <i class="fa fa-arrow-right" style="padding-left: 6px"></i>
        </a>
    }
</div>